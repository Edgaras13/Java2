      <Button layoutX="227.0" layoutY="81.0" mnemonicParsing="false" onAction="#onConfirm" text="Confirm" />
      <RadioButton layoutX="184.0" layoutY="23.0" mnemonicParsing="false" onAction="#onIncome" selected="true" text="Income" toggleGroup="$categoryGroup">
