            <ToggleGroup fx:id="categoryGroup" />
         </toggleGroup></RadioButton>
      <RadioButton layoutX="184.0" layoutY="52.0" mnemonicParsing="false" onAction="#onExpenses" text="Expenses" toggleGroup="$categoryGroup" />
   </children>
</AnchorPane>
